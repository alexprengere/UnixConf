{
    "copyOnSelect": true,
    "copyFormatting": false,
    "multiLinePasteWarning": false,
	"wordDelimiters": "()':,;<>~!@#$%^&*|+=[]{}~?",

    "profiles": {
        "defaults": {
            "cursorShape" : "filledBox",
			"fontFace" : "Consolas",
        },
    },

    "actions":
    [
        { "command": {"action": "copy", "singleLine": false }, "keys": "ctrl+c" },
        { "command": "paste", "keys": "ctrl+v" },

        // Press Ctrl+Shift+F to open the search box
        { "command": "find", "keys": "ctrl+shift+f" },

        // Visual Adjustments
        { "command": { "action": "adjustFontSize", "delta": 1 }, "keys": "ctrl+shift+=" },
        { "command": { "action": "adjustFontSize", "delta": -1 }, "keys": "ctrl+-" },
        { "command": "resetFontSize", "keys": "ctrl+0" },

        // Tabs
        // closeTab is not bound, use closePane to close pane+tabs
        { "command": "newTab", "keys": "ctrl+shift+n" },
        { "command": "duplicateTab", "keys": "ctrl+shift+t" },
        { "command": "nextTab", "keys": "ctrl+pagedown" },
        { "command": "prevTab", "keys": "ctrl+pageup" },

        // Panes
        { "command": { "action": "closePane" }, "keys": "ctrl+shift+d" },
        { "command": { "action": "splitPane", "split": "auto", "splitMode": "duplicate" }, "keys": "ctrl+shift+|" },
        { "command": { "action": "splitPane", "split": "vertical", "splitMode": "duplicate" }, "keys": "alt+shift+plus" },
        { "command": { "action": "splitPane", "split": "horizontal", "splitMode": "duplicate" }, "keys": "alt+shift+-" },
    ]
}
