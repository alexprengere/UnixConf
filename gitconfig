[color]
    diff = auto
    status = auto
    branch = auto
    blame = auto
[color "diff"]
  meta = yellow
[color "status"]
  untracked = cyan
[alias]
    ci = commit
    co = checkout
    st = status
    br = branch
    d = diff
    ds = diff --staged
    ls = ls-files
    logg = log --graph --decorate --pretty=format:'%C(yellow)%h %C(bold green)(%cr)%Creset %s %C(bold blue)<%an>%C(red)%d' --abbrev-commit --all
[core]
    editor = vim
    pager = diff-so-fancy | less --tabs=4 -RFX
[interactive]
    diffFilter = diff-so-fancy | less --tabs=4 -RFX
[diff]
    compactionHeuristic = true
[diff "zip"]
    textconv = unzip -c -a
[diff "word"]
    textconv = strings
[diff "tgz"]
    textconv = zcat
[diff "tbz"]
    textconv = bzcat
[push]
    default = current
[credential]
    helper = cache --timeout=36000
